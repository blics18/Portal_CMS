<% include header_admin %>

	<nav>
			<ul>
				<li><a href="/admin/editPage">Add New Page</a></li>
				<li><a href="/admin/editAccount">Edit Account</a></li>
				<li><a href="/admin/logout">Logout</a></li>
			</ul>
		</nav>

		<header>
			<h1>Table of Pages</h1>
		</header>

		<div>
		<table>
			<tr>
			    <th>Title</th>
			    <th>Updated</th>
			    <th>Options</th>
		  	</tr>

				<% for (var i = 0; i < pages.length; i++){ %>
			  	<tr>
			  		<td><a href="/<%= pages[i].title %>"><%= pages[i].title %></a></td>
			  		<td><%= pages[i].date %></td>
			  		<td>
							<form action="#" method="PUT">
				  			<button type="submit" class="button edit"><input type="hidden" name="url" value="<%= pages[i].url %>">Edit</button>
							</form>
							<form action="#" method="GET">
								<button class="button visibility">Visibility</button>
							</form>
							<!-- <form action="/admin/deletePage" method="DELETE"> -->
								<!-- <button type="submit" class="button delete"><input type="hidden" name="url" value="<%= pages[i].url %>">Delete</button> -->
								<a href="/admin/deletePage/<%= pages[i].url%>" class="button delete">Delete</a>
							<!-- </form> -->
					</td>
			  	</tr>
				<% } %>

		</table>
		</div>

<% include footer %>
